    <PackageReference Include="Mirai-CSharp.NativeAssets.Linux" Version="1.0.2" />
    <PackageReference Include="SkiaSharp.NativeAssets.Linux.NoDependencies" Version="2.80.3" />
  </ItemGroup>
  <ItemGroup>
